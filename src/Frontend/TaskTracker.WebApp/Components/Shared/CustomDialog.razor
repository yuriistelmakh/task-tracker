<MudDialog TitleClass="px-4 pt-2"
           ContentClass="px-4 mr-4">
    <TitleContent>
        <MudStack Row=true
                  Class="d-flex justify-space-between align-center">
            <MudText Typo=@Typo.h6>@Title</MudText>
            <MudIconButton Icon=@Icons.Material.Filled.Close
                           @onclick=OnCancel/>
        </MudStack>
        
    </TitleContent>

    <DialogContent>
        <MudText>@Description</MudText>
    </DialogContent>
    
    <DialogActions>
        <MudContainer Class="d-flex justify-end pa-1 pb-2 gap-3">
            <MudButton @onclick=@OnCancel>
                Cancel
            </MudButton>

            <MudButton Variant=@MainButtonVariant
                       Color=@MainButtonColor
                       @onclick=@OnConfirm>
                @MainButtonText 
            </MudButton>
        </MudContainer>
    </DialogActions>
</MudDialog>